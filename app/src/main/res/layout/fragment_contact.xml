<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.contact.MyPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Contacts"
            android:textSize="29sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.516" />

        <ImageView
            android:id="@+id/img_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="37dp"
            android:src="@drawable/ic_option"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_sheep"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/img_sheep"
                android:layout_marginTop="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Seoul, Korea"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_sheep" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seoyoung Jeong"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_adress" />


            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/div3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <ImageView
                    android:id="@+id/iv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_phonenum"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_text_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Phone number"
                    android:textSize="17dp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_phone"
                    app:layout_constraintStart_toEndOf="@+id/iv_phone"
                    app:layout_constraintTop_toTopOf="@+id/iv_phone" />

                <TextView
                    android:id="@+id/tv_number_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="010-xxxx-xxxx"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_text_phone"
                    app:layout_constraintTop_toBottomOf="@+id/tv_text_phone" />

                <TextView
                    android:id="@+id/tv_copy_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Copy"
                    android:textColor="#1B72C0"
                    android:textSize="17dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_number_phone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_text_phone" />


                <ImageView
                    android:id="@+id/iv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_email"
                    android:layout_marginTop="7dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_number_phone" />

                <TextView
                    android:id="@+id/tv_text_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Email"
                    android:textSize="17dp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_email"
                    app:layout_constraintStart_toEndOf="@+id/iv_email"
                    app:layout_constraintTop_toTopOf="@+id/iv_email" />

                <TextView
                    android:id="@+id/tv_detail_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="~~~~~@gmail.com"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_text_email"
                    app:layout_constraintTop_toBottomOf="@+id/tv_text_email" />

                <TextView
                    android:id="@+id/tv_copy_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Copy"
                    android:textColor="#1B72C0"
                    android:textSize="17dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_detail_email"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_text_email" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/div1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_detail_email" />

                <TextView
                    android:id="@+id/tv_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Schedule"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/div2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/div1" />


                <ImageView
                    android:id="@+id/iv_add_schedule"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_plus"
                    app:layout_constraintBottom_toBottomOf="@id/tv_schedule"
                    app:layout_constraintEnd_toEndOf="@id/tv_copy_email"
                    app:layout_constraintStart_toStartOf="@id/tv_copy_email"
                    app:layout_constraintTop_toTopOf="@id/tv_schedule" />


                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/div2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_schedule" />


                <TextView
                    android:id="@+id/tv_new_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@color/gray_little"
                    android:padding="16dp"
                    android:paddingStart="27dp"
                    android:text="No Schedule"
                    android:textSize="17dp"
                    android:textColor="@color/gray_deep"
                    app:layout_constraintStart_toStartOf="@id/div2"
                    app:layout_constraintTop_toBottomOf="@id/div2" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/div4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_new_schedule" />

                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Account Linked"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/div4" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/div5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintStart_toStartOf="@id/tv_account"
                    app:layout_constraintTop_toBottomOf="@+id/tv_account" />


                <TextView
                    android:id="@+id/tv_blog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@color/gray_little"
                    android:padding="16dp"
                    android:paddingStart="27dp"
                    android:text="Blog"
                    android:textSize="17dp"
                    app:layout_constraintStart_toStartOf="@id/div5"
                    app:layout_constraintTop_toBottomOf="@id/div5" />

                <ImageView
                    android:id="@+id/iv_blog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_blog"
                    android:text="Copy"
                    app:layout_constraintBottom_toBottomOf="@id/tv_blog"
                    app:layout_constraintEnd_toEndOf="@+id/iv_add_schedule"
                    app:layout_constraintStart_toStartOf="@+id/iv_add_schedule"
                    app:layout_constraintTop_toTopOf="@id/tv_blog" />

                <TextView
                    android:id="@+id/tv_git"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:background="@color/gray_little"
                    android:padding="16dp"
                    android:paddingStart="27dp"
                    android:text="Github"
                    android:textSize="17dp"
                    app:layout_constraintStart_toStartOf="@id/tv_blog"
                    app:layout_constraintTop_toBottomOf="@id/tv_blog" />


                <ImageView
                    android:id="@+id/iv_git"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_git"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_git"
                    app:layout_constraintEnd_toEndOf="@+id/iv_blog"
                    app:layout_constraintStart_toStartOf="@+id/iv_blog"
                    app:layout_constraintTop_toTopOf="@+id/tv_git" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_git"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_name">

                <ImageView
                    android:id="@+id/img_telephone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_telephone" />

                <ImageView
                    android:id="@+id/img_sms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_sms" />

                <ImageView
                    android:id="@+id/img_video"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_video" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>